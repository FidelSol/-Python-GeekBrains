print("Задание №2: ")
second_var = int(input("Секунды:\n"))
print("hh:mm:ss = {:>2}:{:>2}:{:>2}".format(second_var//3600,(second_var%3600)//60, second_var%60))

print("Задание №3: ")
n = input('Введите число n: ')
print('Результат заданного выражения: ', int(n) + int(n+n) + int(n + n + n))

print("Задание №4: ")
a = int(input("Введите целое положительное число: "))
m = a%10
a = a//10
while a > 0:
    if a%10 > m:
        m = a%10
    a = a//10
print(m)

print("Задание №5: ")
vir = int(input("Введите значение выручки: "))
izd = int(input("Введите значение издержки: "))
prib = vir - izd
rent = (prib * 100) / vir
ub = izd - vir
if vir > izd:
    prib = str(prib)
    rent = str(rent)
    print("Фирма отработала с прибылью: " + prib + "." + " Рентабельность: " + rent)
elif vir == izd:
    print("Прибыль равна издержкам.")
else:
    ub = str(ub)
    print("Фирма отработала с убылью: " + ub)
c = int(input("Введите численность сотрудников фирмы"))
s = int(prib) / c
s = str(s)
print("Прибыль фирмы в расчете на одного сотрудника: " + s)